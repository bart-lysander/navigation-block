{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form addCategory %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#tabContent" aria-controls="content" role="tab" data-toggle="tab">{{ 'lbl.Content'|trans|capitalize }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="tabContent">
            <div class="form-group">
              <label for="title" class="control-label">
                {{ 'lbl.Title'|trans|capitalize }}
                <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
              </label>
              {% form_field_error title %} {% form_field title %}
            </div>
            <div class="form-group">
              <label for="alias" class="control-label">
                {{ 'lbl.Alias'|trans|ucfirst }}
              </label>
              {% form_field alias %} {% form_field_error alias %}
              <span id="generatedUrl"></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="addButton" type="submit" name="add" class="btn btn-primary">
            <span class="fa fa-plus-square"></span>{{ 'lbl.AddCategory'|trans|capitalize }}
          </button>
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}
